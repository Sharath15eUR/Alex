# creating a file "sample3.txt"
touch sample3.txt

# creating a folder "dir1"
mkdir dir1
# adding a softlink to "sample3.txt" in "dir1"
ln -s $(pwd)/sample3.txt dir1/sample3_link1.txt

# creating a folder "dir2"
mkdir dir2
# adding a softlink to "sample3_link1.txt" in "dir2"
ln -s $(pwd)/dir1/sample3_link1.txt dir2/sample3_link2.txt
